{
  "manifest_version": 2,
  "name": "Quick ID Copy Tool",
  "version": "1.1",
  "description": "Right-click any element to quickly copy its ID, CSS selector, or XPath - perfect for AI-assisted development",

  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}