{
  "manifest_version": 2,
  "name": "AI Quick Copy Tool",
  "version": "1.2",
  "description": "Right-click any element to quickly copy its ID, CSS selector, or XPath - perfect for AI-assisted development",

  "browser_specific_settings": {
    "gecko": {
      "id": "ai-quick-copy@paulpreibisch.com"
    }
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}